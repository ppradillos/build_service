{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Python: Flask",
        "type": "python",
        "request": "launch",
        "stopOnEntry": false,
        "pythonPath": "/usr/bin/python3",
        "program": "${workspaceFolder}/server.py",
        "args": [],
        "cwd": "${workspaceFolder}",
        "env": {
          "FLASK_APP": "server.py", 
          "FLASK_ENV": "development"
        },
        "envFile": "${workspaceFolder}/.env",
        "debugOptions": [
          "WaitOnAbnormalExit",
          "WaitOnNormalExit",
          "RedirectOutput"
        ],
        "console": "integratedTerminal",
        "preLaunchTask": "python: flask"
      }
    ]
  }
  